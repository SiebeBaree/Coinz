{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "../api/dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "exclude": [
    "../api/node_modules",
    "dist"
  ]
}