{
    "extends": "@repo/config/tsconfig/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        },
        "preserveSymlinks": true
    },
    "include": [
        ".",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "**/*.cjs",
        "**/*.js",
        ".next/types/**/*.ts",
        ".eslintrc.cjs"
    ],
    "exclude": ["node_modules"]
}
