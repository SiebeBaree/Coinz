{
    "name": "bot",
    "version": "4.0.0",
    "description": "A feature rich discord bot with an entire economic system.",
    "main": "dist/manager.js",
    "scripts": {
        "start": "tsc && node --env-file .env ./dist/sharder.js",
        "dev": "concurrently \"tsc --watch\" \"nodemon --env-file .env ./dist/sharder.js\"",
        "build": "tsc",
        "lint": "prettier --check . && eslint --ext .ts --format stylish src",
        "format": "prettier --write . && eslint --ext .ts --fix --format stylish src",
        "register-commands": "tsc && node --env-file .env ./dist/register.js",
        "script:balance-items": "concurrently \"tsc --watch\" \"nodemon ./dist/item-balancer.js\"",
        "script:add-items": "tsc && node --env-file .env ./dist/itemUploader.js",
        "script:convert-commands": "tsc && node ./dist/commandsConverter.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SiebeBaree/Coinz.git"
    },
    "author": "SiebeBaree",
    "license": "SEE LICENSE IN LICENSE",
    "bugs": {
        "url": "https://github.com/SiebeBaree/Coinz/issues"
    },
    "homepage": "https://github.com/SiebeBaree/Coinz#readme",
    "keywords": [
        "economy",
        "discord",
        "bot",
        "typescript",
        "discord.js",
        "crons",
        "crypto",
        "stocks",
        "stock",
        "market",
        "cluster",
        "shard",
        "coinz"
    ],
    "dependencies": {
        "bufferutil": "^4.0.8",
        "discord-hybrid-sharding": "^2.1.4",
        "discord.js": "^14.14.1",
        "ioredis": "^5.3.2",
        "moment": "^2.30.1",
        "mongoose": "^8.1.3",
        "obscenity": "^0.2.0",
        "utf-8-validate": "^6.0.3",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^5.0.0",
        "zlib-sync": "^0.1.9"
    },
    "devDependencies": {
        "@types/node": "^20.11.19",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-neon": "^0.1.58",
        "eslint-formatter-pretty": "^6.0.1",
        "prettier": "^3.2.5",
        "typescript": "^5.3.3"
    }
}
