{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Next.js",
    "extends": "./base.json",
    "compilerOptions": {
        "plugins": [{ "name": "next" }],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "allowJs": true,
        "jsx": "preserve",
        "noEmit": true,
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "incremental": true,
        "declaration": false,
        "declarationMap": false
    }
}
